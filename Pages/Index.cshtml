@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>My Favorite Song</title>
        <style>
            body {
                color: #f1f1f1;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                text-align: center;
                padding: 20px;
            }

            h1 {
                color: #ff00ff;
            }

            .video-container {
                margin: 20px auto;
            }

            #animated-text {
                font-size: 1.5em;
                color:black;
                opacity: 0;
            }

        </style>
    </head>
    <body>
        <h1 id="title">Check Out My Favorite Song!</h1>

        <!-- Embed YouTube video -->
        <div class="video-container">
            <iframe width="560" height="315" src="https://www.youtube.com/embed/kXYiU_JCYtU"
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
            </iframe>
        </div>

        <p id="animated-text">Hope you enjoy it as much as I do!</p>

        <script>
            // Simple fade-in animation for the text
            window.onload = function () {
                const text = document.getElementById('animated-text');
                let opacity = 0;

                const fadeIn = setInterval(function () {
                    if (opacity < 1) {
                        opacity += 0.02;
                        text.style.opacity = opacity;
                    } else {
                        clearInterval(fadeIn);
                    }
                }, 30);
            };

        </script>
    </body>
</html>

